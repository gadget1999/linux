#!/usr/bin/env bash

CMD_PATH=$(dirname "$0")
source $CMD_PATH/lib/common.sh
source $CMD_PATH/lib/docker.sh

CONTAINER="openvas"
IMAGE="mikesplain/openvas"

EXTRA_OPTS=(
 -v $CONTAINER:/var/lib/openvas/mgr/
 -p 443:443
 -u $MAIN_USER_ID
 )

ENTRYPOINT=()

new_stateless_container $CONTAINER $IMAGE EXTRA_OPTS ENTRYPOINT

docker logs -f openvas
