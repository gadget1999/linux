#!/usr/bin/env bash

CMD_PATH=$(dirname "$0")
source $CMD_PATH/lib/common.sh
source $CMD_PATH/lib/docker.sh

check_env "SAMBA_LOCAL_PATH SAMBA_SHARE SAMBA_USER SAMBA_PASSWORD"

CONTAINER="samba"
IMAGE="gadget1999/rpi-samba"

MAX_RAM="100m"
EXTRA_OPTS=(
 -p 139:10139
 -p 445:10445
 -p 137:10137/udp
 -p 138:10138/udp
 -v $SAMBA_LOCAL_PATH:/$SAMBA_SHARE
 -e SMB_VER="SMB2_10"
 -e PUID=$CONTAINER_UID
 -e PGID=$CONTAINER_UID
 -e USER="$SAMBA_USER:$SAMBA_PASSWORD"
 -e SHARE="$SAMBA_SHARE:/$SAMBA_SHARE:rw:$SAMBA_USER"
 -m $MAX_RAM
 )

ENTRYPOINT=()

[ "$1" == "debug" ] && DEBUG_DOCKER=1
new_container_service $CONTAINER $IMAGE EXTRA_OPTS ENTRYPOINT
